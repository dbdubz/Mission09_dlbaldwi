@{
}
@model IEnumerable<string>
<div class="d-grid gap-2">
    @foreach (string t in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-category="@t" asp-route-pageNum="" class="btn btn-block @(ViewBag.SelectedCategory == t ? "btn-primary" : "btn-outline-secondary")">@t</a>
    }

    @if (ViewBag.SelectedCategory != null)
    {
        <!-- new bootstrap addition: text-secondary so it is a nice color with the buttons -->
        <a asp-controller="Home" asp-action="Index" asp-route-category="" asp-route-pageNum="" class="text-secondary float-right">clear selection</a>
    }
</div>