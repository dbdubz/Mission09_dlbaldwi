@{
}
@model Book

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Title&nbsp;&nbsp;&nbsp;
            <span class="badge badge-pill badge-primary float-right">
                <small>@Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    <div class="card-text p-1">
        <ul>
            <li>ISBN: @Model.Isbn</li>
            <li>Author: @Model.Author</li>
            <li>Publisher: @Model.Publisher</li>
            <li>Classification: @Model.Classification</li>
            <li>Category: @Model.Category</li>
            <li>PageCount: @Model.PageCount</li>
        </ul>
        <form method="post" asp-page="/Cart">
            <button type="submit" class="btn btn-success btn-sm float-right card-text">Add to Cart</button>
        </form>
    </div>
</div>