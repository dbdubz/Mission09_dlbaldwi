@{
    ViewData["Title"] = "Home Page";
}
@model BooksViewModel

<div class="text-center">
    <h1 class="display-4">Books</h1>
</div>
@foreach (var book in Model.Books)
{
    <div class="card card-outline-primary m-1 p-1">
        <div class="bg-faded p-1">
            <h4>
                @book.Title&nbsp;&nbsp;&nbsp;
                <span class="badge badge-pill badge-primary">
                    <small>@book.Price.ToString("c")</small>
                </span>
            </h4>
        </div>
        <div class="card-text p-1">
            <ul>
                <li>ISBN: @book.Isbn</li>
                <li>Author: @book.Author</li>
                <li>Publisher: @book.Publisher</li>
                <li>Classification: @book.Classification</li>
                <li>Category: @book.Category</li>
                <li>PageCount: @book.PageCount</li>
            </ul>
        </div>
    </div>
}

<div page-model="@Model.PageInfo" page-action="Index" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary" class="btn-group pull-right m-1"></div>